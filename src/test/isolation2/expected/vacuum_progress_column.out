-- Setup the append-optimized table to be vacuumed
DROP TABLE IF EXISTS vacuum_progress_ao_column;
DROP TABLE
CREATE TABLE vacuum_progress_ao_column(i int, j int);
CREATE TABLE

-- Add two indexes to be vacuumed as well
